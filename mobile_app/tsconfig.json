{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "screens/**/*.jsx",
    "components/**/*.jsx",
    "navigation/**/*.jsx",
    "services/**/*.ts",
    "utils/**/*.js",
    "hooks/**/*.js",
    "contexts/**/*.jsx",
    "constants/**/*.js"
  ]
}
